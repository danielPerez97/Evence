<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="view"
            type="projects.csce.evence.view.ui.GenerateQR" />
        <variable
            name="viewModel"
            type="projects.csce.evence.viewmodel.GenerateQrViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        style="@style/RootLayout"
        android:clipToPadding="false"
        android:paddingBottom="0dp">

        <androidx.cardview.widget.CardView
            style="@style/LayoutContainerCardView"
            android:layout_margin="20dp"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical"
                tools:context=".view.ui.GenerateQR"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_edit_gray_48dp"/>

                </LinearLayout>

                <TextView
                    style="@style/FormTitleTextView"
                    android:text="@string/event_title"/>
                <androidx.cardview.widget.CardView
                    style="@style/FormCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/title_edit_text"
                        style="@style/FormEditText"
                        android:inputType="textCapWords"
                        />
                </androidx.cardview.widget.CardView>


                <TextView
                    style="@style/FormTitleTextView"
                    android:text="@string/start_date"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        style="@style/FormCardView"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="@{() -> view.startDateDialog()}">

                        <TextView
                            android:id="@+id/start_date_textView"
                            style="@style/FormDateTextView"
                            android:layout_height="wrap_content"
                            android:text="mm/dd/yyyy" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/FormCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="@{() -> view.startTimeDialog()}">
                        <TextView
                            android:id="@+id/start_time_textView"
                            style="@style/FormDateTextView"
                            android:text="00:00"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    style="@style/FormTitleTextView"
                    android:text="@string/end_date"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <androidx.cardview.widget.CardView
                        style="@style/FormCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:onClick="@{() -> view.endDateDialog()}">
                        <TextView
                            android:id="@+id/end_date_textView"
                            style="@style/FormDateTextView"
                            android:text="mm/dd/yyyy"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/FormCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="@{() -> view.endTimeDialog()}">
                        <TextView
                            android:id="@+id/end_time_textView"
                            style="@style/FormDateTextView"
                            android:text="00:00"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>



                <TextView
                    style="@style/FormTitleTextView"
                    android:text="@string/location"/>
                <androidx.cardview.widget.CardView
                    style="@style/FormCardView"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/location_edit_text"
                        style="@style/FormEditText"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/FormTitleTextView"
                    android:text="@string/description"/>

                <androidx.cardview.widget.CardView
                    style="@style/FormCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/description_edit_text"
                        style="@style/FormEditText"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/toolbar"
            style="@style/CustomBottomAppBar"
            app:fabAlignmentMode="end"
            app:title="@string/settings">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate QR"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_btn"
            android:onClick="@{() -> view.generateQR()}"
            style="@style/FAB"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_check_white_36dp"
            app:layout_anchor="@+id/toolbar"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>