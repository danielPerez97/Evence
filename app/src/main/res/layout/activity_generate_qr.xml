<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="view"
            type="projects.csce.evence.view.ui.GenerateQR" />
        <variable
            name="viewModel"
            type="projects.csce.evence.viewmodel.GenerateQrViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/LayoutContainerCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"

            android:orientation="vertical"
            tools:context=".view.ui.GenerateQR">

            <TextView
                style="@style/FormTitleTextView"
                android:text="@string/event_title"/>
            <androidx.cardview.widget.CardView
                style="@style/FormCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/title_edit_text"
                    style="@style/FormEditText"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                style="@style/FormTitleTextView"
                android:text="@string/start_date"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/FormCardView"
                    android:onClick="@{() -> view.startDateDialog()}"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/start_date_textView"
                        style="@style/FormDateTextView"
                        android:text="mm/dd/yyyy"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/FormCardView"
                    android:onClick="@{() -> view.startTimeDialog()}"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/start_time_textView"
                        style="@style/FormDateTextView"
                        android:text="00:00"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                style="@style/FormTitleTextView"
                android:text="@string/end_date"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <androidx.cardview.widget.CardView
                    style="@style/FormCardView"
                    android:onClick="@{() -> view.endDateDialog()}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/end_date_textView"
                        style="@style/FormDateTextView"
                        android:text="mm/dd/yyyy"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/FormCardView"
                    android:onClick="@{() -> view.endTimeDialog()}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/end_time_textView"
                        style="@style/FormDateTextView"
                        android:text="00:00"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <TextView
                style="@style/FormTitleTextView"
                android:text="@string/description"/>

            <androidx.cardview.widget.CardView
                style="@style/FormCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/description_edit_text"
                    style="@style/FormEditText"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/FormTitleTextView"
                android:text="@string/location"/>
            <androidx.cardview.widget.CardView
                style="@style/FormCardView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/location_edit_text"
                    style="@style/FormEditText"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/generate_btn"
                android:onClick="@{() -> view.generateQR()}"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="24dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/save_qr_button"
                android:onClick="@{() -> view.saveQrButton()}"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="24dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/QRImage"
                android:onClick="@{() -> view.generateQR()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>